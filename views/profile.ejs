<link rel="stylesheet" type="text/css" href="/css/profile.css">

<main>
    <div id="text-box">
        <h1>My Feeds</h1>
    </div>
    <div id="form-box">
        <% if(locals.user){ %>
            <form action="/post/create" method="post">
                <textarea type="text" name="content" placeholder="Type here..." required cols="40" rows="8"></textarea>
                <input id="post-btn" type="submit" value="Post">
            </form>
        <% } %>
        
    </div>
    <div id="post-box">
        <% for(post of posts) { %>
            <div id="posts">
                <div id="name-and-del-box">
                    <div>
                        <h1><%= post.user.first + ' ' + post.user.last %> <small>posted a status </small></h1>
                    </div>
                    <% if(locals.user.id == post.user.id) { %>
                        <div><span><a href="/post/destroy/<%=post.id%>">x</a></span></div>
                    <% } %>
                    
                </div>
                <div id="post-content">
                    <p><%= post.content %></p>
                </div>
                <div id="comment-box">
                    <div id="comment-scroller">
                        <% for(comment of post.comment) { %>
                            <div id="comment">
                                <div id="comment-and-del-box">
                                    <div>
                                        <h3><%= comment.user.first + ' ' + comment.user.last %></h3>
                                    </div>
                                    <% if(locals.user.id == comment.user.id) { %>
                                        <div><span><a href="/comment/destroy/<%=comment.id%>">x</a></span></div>
                                    <% } %>
                                </div>
                                <p><%= comment.content %></p>
                            </div>           
                        <% } %> 
                    </div>
                    <form action="/comment/create" method="post">
                        <textarea type="text" name="content" placeholder="Add comment..." required cols="40" rows="3"></textarea>
                        <input type="hidden" name="post" value="<%=post._id %>"> 
                        <input type="submit" value="Comment" id="comment-btn">
                    </form>
                </div>
            </div>
        <% } %>    
    </div>
</main>

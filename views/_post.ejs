<div class="posts" id="posts-<%=post.id %>">
    <div id="name-and-del-box">

        <div id="profile-name">
            <div id="profile">
                <img src="<%=post.user.avatar %>" alt="<%= post.user.first %>">
                <!-- <% if(post.user.avatar) { %>
                    <img src="<%=post.user.avatar %>" alt="<%= post.user.first %>">
                <% } else { %>
                    <img src="https://www.oseyo.co.uk/wp-content/uploads/2020/05/empty-profile-picture-png-2-281x300.png" alt="<%= post.user.first %>">
                <% } %>    -->
            </div>
            <div id="name">
                <strong><%= post.user.first + ' ' + post.user.last %></strong>
            </div>

        </div>
        <% if(locals.user.id == post.user.id) { %>
            <div id="cross"><span><a class="del-btn" href="/post/destroy/<%=post.id %>">x</a></span></div>
        <% } %>

    </div>
    <div id="post-content">
        <p><%= post.content %></p>

    </div>
    <div id="comment-box">
        <div class="comment-scroller" id="comment-scroller-<%= post._id %>">
            <% for(comment of post.comment) { %>
                <%- include('_comment') -%>
            <% } %>
        </div>
        <div id="form-controller">
            <div id="form-img">
                <img src="<%= user.avatar%> " >
            </div>
            <div id="form-text">
                <form action="/comment/create" id="comment-form-<%= post._id %>" method="post">
                    <textarea type="text" id="cmntArea" name="content" placeholder="Write a comment..." required cols="45" rows="1"></textarea>
                    <input type="hidden" name="post" id="hide" value="<%=post._id %>">
                    <input type="submit" value="Comment" id="comment-btn">
                </form>
            </div>

        </div>
    </div>
    <hr>
    <div id="post-like">
        <span >
            <% if(locals.user) { %>
                <a class="toggle-like" id="like" href="/likes/toggle/?id=<%=post._id%>&type='Post'" data-likes ="<%=post.likes.length %>" >
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" b fill="black"  viewBox="0 0 16 16">
                        <path  d="M6.956 1.745C7.021.81 7.908.087 8.864.325l.261.066c.463.116.874.456 1.012.965.22.816.533 2.511.062 4.51a9.84 9.84 0 0 1 .443-.051c.713-.065 1.669-.072 2.516.21.518.173.994.681 1.2 1.273.184.532.16 1.162-.234 1.733.058.119.103.242.138.363.077.27.113.567.113.856 0 .289-.036.586-.113.856-.039.135-.09.273-.16.404.169.387.107.819-.003 1.148a3.163 3.163 0 0 1-.488.901c.054.152.076.312.076.465 0 .305-.089.625-.253.912C13.1 15.522 12.437 16 11.5 16H8c-.605 0-1.07-.081-1.466-.218a4.82 4.82 0 0 1-.97-.484l-.048-.03c-.504-.307-.999-.609-2.068-.722C2.682 14.464 2 13.846 2 13V9c0-.85.685-1.432 1.357-1.615.849-.232 1.574-.787 2.132-1.41.56-.627.914-1.28 1.039-1.639.199-.575.356-1.539.428-2.59z"/>
                    </svg>
                    <%= post.likes.length %>
                </a>
            <% } else { %> 
                <%= post.likes.length %> Likes
            <% } %>
            
        </span>
    </div>
</div>
<script src="/js/home_comment.js"></script>
<script src="/js/toggle_like.js"></script>
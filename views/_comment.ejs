<div class="comment" id="comment-<%= comment.id %>">
    <div id="cmntAndImg">
        <div id="cmnt-img">
            <img src="<%=comment.user.avatar %>" alt="">
        </div>
        <div id="inner-comment">
            <div id="comment-and-del-box">
                <div>
                    <h3><%= comment.user.first + ' ' + comment.user.last %></h3>
                </div>
                <% if(locals.user.id == post.user.id || locals.user.id == comment.user.id) { %>
                    <div><span><a class="del-cmnt" href="/comment/destroy/<%=comment.id%>">x</a></span></div>
                <% } %>
            </div>
            <p><%= comment.content %></p>
        </div>
    </div>
    <div class="cmnt-like">
        <div id="like-logo-count">
            <% if(locals.user) { %>
                <a class="toggle-like" id="like" href="/likes/toggle/?id=<%=comment._id%>&type=Comment" >
                    <i class="like-color" ></i>
                </a>
                <div id="count" data-likes="<%= comment.likes.length %>">
                    <span>&nbsp; <%= comment.likes.length %></span>
                </div>
            <% } else { %> 
                <i class="like-color "></i> 
                <div id="count" data-likes="<%= comment.likes.length %>">
                    <span>&nbsp; <%= comment.likes.length %></span>
                </div>
            <% } %>     
            </div>
    </div>
</div>     
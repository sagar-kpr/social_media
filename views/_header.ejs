<header>
    <div id="logo-and-search">
        <div id="logo">
            <a href="/">
                <img width="50" src="<%= assetsPath('icons/fbnew.png') %>" alt="fb-logo">
            </a>    
        </div>
        <div id="search-box">
            <% if(locals.user){ %>
                <form action="/" method="get">
                    <button type="submit"><i class="fa-sharp fa-solid fa-magnifying-glass"></i></button>
                    <input type="search" placeholder="Search Facebook">
                    
                </form>
            <% } %>    

        </div>
    </div>
    <% if(locals.user){ %>
        <div id="home">
            <div id="inner-home">
                <a href="/home" class="a-tag" data-value="true" >
                    <div class="home-icons" >
                        <img class="img" src="<%= assetsPath('icons/home.png') %>" width="25">
                    </div>
                </a>
                <a class="a-tag" data-value="false">
                    <div class="home-icons" >
                        <img class="img"  src="<%= assetsPath('icons/watchs.png') %>" width="25">
                    
                    </div>
                </a>  
                <a class="a-tag" data-value="false"> 
                    <div class="home-icons"  >
                        <img class="img" src="<%= assetsPath('icons/market.png') %>" width="25">
                    </div>
                </a>
                <a class="a-tag" data-value="false">
                    <div class="home-icons" >
                        <img class="img" src="<%= assetsPath('icons/people.png') %>" width="25">
                    </div>
                </a>
                <a class="a-tag" data-value="false">
                    <div class="home-icons" >
                        <img class="img"  src="<%= assetsPath('icons/rubik.png') %>" width="30">
                    </div>
                </a>
            </div>

        </div>
    <% }  %>    
    <div id="user">
        <% if(locals.user){ %>
            <div class="text">
                <a id="messenger">
                    <i class="fa-brands fa-facebook-messenger"></i>
                </a>
                <div id="msg-box">
                    <% if(locals.user.friends.length > 0) { %>
                        <% for(frnds of locals.user.friends){ %>
                            <% for(list of users){ %>
                                <% if(frnds == list.id) { %>
                                        <div class="chat-friends" id="<%=list._id %>">
                                            <a href="/chat/chat_toggle/?id=<%=list._id %>">
                                                <div id="chat-friends-img-box">
                                                    <div id="chat-friends-img">
                                                        <img src="<%= list.avatar %>"  alt="">
                                                    </div>
                                                    <div id="chat-friends-name">
                                                        <p><%=list.first + ' ' + list.last %></p>
                                                    </div>
                                                </div>
                                            </a>    
                                        </div>
                                <% } %>   
                            <% } %>
                        <% } %>
                    <% } else { %>
                        <h3 style="text-align:center ; font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;">No Freinds...</h3>
                    <% }  %> 
                </div>
            </div>
            <div class="text">
                <a href="#">
                    <i class="fa-solid fa-bell"></i>
                </a>    
            </div>
            <div class="text">
                <a href="/home/profile/<%= user.id %>">
                    <img src="<%=user.avatar%>" alt="<%=user.first%>">
                </a>
            </div>
            <div id="info">
                <form action="/destroy" method="post">
                    <input type="submit" value="Log out">
                </form>
            </div>
        <% } else { %>
            <div id="info1">
                <p><a href="/">Log in </a></p>
            </div>
            <div id="info2">
                <p><a href="/signup">Sign up </a></p>
            </div>
        <% } %>
    </div>
</header>
<script src="<%= assetsPath('js/_header.js') %>"></script>
<script src="<%= assetsPath('js/chat_toggle.js') %>"></script>
<script>
    $(' .chat-friends').each(function(){
        let self = this;
        let chatToggle = new ChatToggle(self);

    })
</script>


<link rel="stylesheet" type="text/css" href="/css/home.css">
<link rel="stylesheet" type="text/css" href="/css/_asideLeft.css">

<%- include('_asideLeft') %>
<main id="main">
    <section id="my-feeds">
        <div id="form-box">
            <% if(locals.user){ %>
                <div id="my-img">
                    <% if(user.avatar) { %>
                        <img src="<%=user.avatar %>" alt="<%= user.first %>">
                    <% } else { %> 
                        <img src="https://www.oseyo.co.uk/wp-content/uploads/2020/05/empty-profile-picture-png-2-281x300.png" alt="<%= user.first %>">
                    <% } %>   
                </div>
                <div>
                    <form action="/post/create" id="post-form" method="post">
                        <textarea id="textarea" type="text" name="content" placeholder="Whats's on your mind, <%= user.first %>" required cols="45" rows="1"></textarea>
                        <input id="post-btn" type="submit" value="Post">
                    </form>
                   
                </div>
            <% } %>
            
        </div>
        <div id="post-box">
            <% for(post of posts) { %>
                <%- include('_post') -%>
            <% } %>    
        </div>
    </section>
    <section id="friends-list">
        <div id="friends-logo">
            <h3>Friends</h3>
        </div>
        <% for(list of users) { %>
            <% if(locals.user.id != list.id) { %>
                <div id="friends">
                    <div id="friends-img">
                        <img src="<%= list.avatar%>">
                    </div>
                    
                    <p><a href="/home/profile/<%= list.id %>"><%= list.first + ' ' + list.last %></a></p>
                </div>
            <% } %>

        <% } %>
    </section>    

</main>
<script src="/js/home_post.js"></script>
<script src="/js/index.js"></script>

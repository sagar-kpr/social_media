<link rel="stylesheet" type="text/css" href="/css/home.css">
<link rel="stylesheet" type="text/css" href="/css/_asideLeft.css">
<link rel="stylesheet" type="text/css" href="/css/_asideRight.css">

<%- include('_asideLeft') %>
<main id="main">
    <section id="my-feeds">
        <div id="story-box">
            <div id="story-header">
                <div class="text">
                    <h3>Stories</h3>
                </div>
                <div class="text">
                    <h3>Reels</h3>
                </div>
                <div class="text">
                    <h3>Rooms</h3>
                </div>

            </div>
            <hr>
            <div id="all-stories">
                <div class="user-story-box">
                    <div class="user-story" style="height:75%;" >
                        <% if(user.avatar) { %>
                            <img src="<%= user.avatar %>" style="border-radius: 10px 10px 0 0;" alt="<%= user.first %>">
                        <% } else { %> 
                            <img src="https://www.oseyo.co.uk/wp-content/uploads/2020/05/empty-profile-picture-png-2-281x300.png" alt="<%= user.first %>">
                        <% } %>  
                    </div>
                    <div id="create-story">
                         <div id="story-text">
                            <span>Create story</span>
                         </div>
                         <div id="icon">
                            <i class="fa-solid fa-plus"></i>
                         </div>
                    </div> 

                </div>
                <% for (list of users) { %>
                    <% if(locals.user.id != list.id) { %>
                        <div class="user-story-box">
                             <div class="user-story" >
                                <img  src="/images/pic2.jpg">
                            </div>
                            <div class="user-img">
                                <% if(list.avatar) { %>
                                    <img src="<%= list.avatar %>" alt="<%= list.first %>">
                                <% } else { %> 
                                    <img src="https://www.oseyo.co.uk/wp-content/uploads/2020/05/empty-profile-picture-png-2-281x300.png" alt="<%= user.first %>">
                                <% } %>   
                            </div>
                        </div>
                    <% } %>   
                <% } %>

            </div>

        </div>
        <div id="form-box">
            <% if(locals.user){ %>
                <div id="form-inner">
                    <div id="my-img">
                        <% if(user.avatar) { %>
                            <img src="<%=user.avatar %>" alt="<%= user.first %>">
                        <% } else { %> 
                            <img src="https://www.oseyo.co.uk/wp-content/uploads/2020/05/empty-profile-picture-png-2-281x300.png" alt="<%= user.first %>">
                        <% } %>   
                    </div>
                    <div id="main-form">
                        <form action="/post/create" id="post-form" method="post">
                            <textarea id="textarea" type="text" name="content" placeholder="Whats's on your mind, <%= user.first %>" required cols="50" rows="1"></textarea>
                            <input id="post-btn" type="submit" value="Post">
                        </form> 
                    </div> 
                </div>
                <hr>
                <div id="add-status">
                    <div id="inner-status">
                        <div class="status-box">
                            <div class="status-logo">
                                <img src="/icons/live.png" >
                            </div>
                            <div class="status-text">
                                <span>Live video</span>
                            </div>
                        </div>
                        <div class="status-box">
                            <div class="status-logo">
                                <img src="/icons/gallery.png" >
                            </div>
                            <div class="status-text">
                                <span>Photo/video</span>
                            </div>
                        </div>
                        <div class="status-box">
                            <div class="status-logo">
                                <img src="/icons/smile.png" >
                            </div>
                            <div class="status-text">
                                <span>Feeling/activity</span>
                            </div>
                        </div>
                    </div>    
                </div>
            <% } %>
        </div>
        
        <div id="post-box">
            <% for(post of posts) { %>
                <%- include('_post') -%>
            <% } %>    
        </div>
    </section>
        

</main>
<%- include('_asideRight') %>


<script src="/js/home_post.js"></script>
<script src="/js/index.js"></script>